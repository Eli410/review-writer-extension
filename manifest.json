{
  "manifest_version": 3,
  "name": "Amazon Review Writer",
  "version": "1.0",
  "description": "Automatically generates product reviews for Amazon products using OpenRouter (Claude Haiku 4.5)",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://openrouter.ai/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.amazon.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://*.amazon.com/review/review-your-purchases/*"],
      "js": ["typing-simulator.js", "review-page.js"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  }
} 