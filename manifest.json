{
  "manifest_version": 3,
  "name": "Amazon Review Writer",
  "version": "1.0",
  "description": "Generate product reviews for Amazon using OpenRouter",
  "permissions": ["activeTab", "scripting", "tabs", "storage"],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://openrouter.ai/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.amazon.com/*"],
      "js": ["prompts.js", "content.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://*.amazon.com/review/review-your-purchases/*"],
      "js": ["storage-keys.js", "typing-simulator.js", "review-page.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
